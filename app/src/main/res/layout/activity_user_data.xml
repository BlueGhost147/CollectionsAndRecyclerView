<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserDataActivity"
        android:orientation="vertical">

    <TextView
            android:text="Enter student data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="77dp"
            tools:layout_editor_absoluteX="46dp" android:id="@+id/textViewInfo"/>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="147dp"
                tools:layout_editor_absoluteX="141dp" android:id="@+id/textViewInfoName"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/editStudentName"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="111dp"
                tools:layout_editor_absoluteX="121dp" android:id="@+id/textViewInfoSemester"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Semester"
                android:id="@+id/editStudentSemserter"
                tools:layout_editor_absoluteY="65dp"
                tools:layout_editor_absoluteX="71dp"/>
    </LinearLayout>
    <Button
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="saveStudent"/>

    <Button
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="Read"
            android:onClick="readStudent"/>
</LinearLayout>